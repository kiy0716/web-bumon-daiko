# Local Development Environment Variables
# ローカル開発用の環境変数テンプレート
# LOCAL_DEV_POLICY.mdに従い、ローカルではstaging Supabaseを参照します

# Database (Staging Supabaseを参照 - ローカルDBは作りません)
DATABASE_URL="postgresql://postgres.staging-xxx:PASSWORD@aws-0-ap-northeast-1.pooler.supabase.com:5432/postgres"

# Supabase (クライアント側で使用 - Staging)
NEXT_PUBLIC_SUPABASE_URL="https://xxx-staging.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJxxx..."

# Resend API Key (開発用 - テストモード)
RESEND_API_KEY="re_dev_xxxxxxxxxxxxx"

# Email Settings (開発用 - 自分宛てに固定)
ADMIN_EMAIL="dev@example.com"
FROM_EMAIL="dev@localhost"

# メール送信の安全設定（開発環境用）
# ローカル開発では誤送信を防ぐため、自分宛てに強制
MAIL_TO_FORCE="your-dev-email@example.com"
MAIL_ENABLED="false"  # ローカルではメール送信をOFFにすることを推奨

# Admin Basic Auth
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="dev123"

# Google Calendar Booking URL (開発用テストURL)
NEXT_PUBLIC_GOOGLE_CALENDAR_BOOKING_URL="https://calendar.google.com/calendar/test"

# SNS Contact Information (チャット相談用)
NEXT_PUBLIC_LINE_ID="your-line-id"
NEXT_PUBLIC_LINE_URL="https://line.me/ti/p/your-line-id"
NEXT_PUBLIC_CHATWORK_URL="https://www.chatwork.com/your-chatwork-id"
NEXT_PUBLIC_DISCORD_ID="your-discord-id"
NEXT_PUBLIC_DISCORD_URL="https://discord.com/users/your-discord-id"
NEXT_PUBLIC_CONTACT_EMAIL="contact@example.com"

# Base URL (Local)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment Indicator
NEXT_PUBLIC_VERCEL_ENV="development"
